<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/main_search" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_song_data_rank"
                    style="@style/SongDataText"
                    android:text="歌曲走势："
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/tv_song_data_total_weeks"
                    style="@style/SongDataText"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="在榜周数：" />

                <TextView
                    android:id="@+id/tv_song_data_first_weeks"
                    style="@style/SongDataText"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="榜首周数：" />

                <TextView
                    android:id="@+id/tv_song_data_tenth_weeks"
                    style="@style/SongDataText"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="前十周数：" />

                <TextView
                    android:id="@+id/tv_song_data_fiftieth_weeks"
                    style="@style/SongDataText"
                    android:layout_marginStart="8dp"
                    android:text="前50周数：" />

                <TextView
                    android:id="@+id/tv_song_data_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="8dp"
                    android:text="复制走势"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>