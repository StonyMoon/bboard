<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.stonymoon.bboard.MainActivity">


    <Button
        android:id="@+id/btn_main_itunes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/itunes"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_main_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rank" />

    <Button
        android:id="@+id/btn_main_song_dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/song_dashboard" />


    <Button
        android:id="@+id/btn_main_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"

        />


</LinearLayout>
